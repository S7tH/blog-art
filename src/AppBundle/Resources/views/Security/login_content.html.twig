{% trans_default_domain 'FOSUserBundle' %}


<div class="well wellmore">
    
    {% if error %}
        <div class="message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <div class="col-sm-12 log-frame">
            <label class="col-sm-4 log-label" for="username">{{ 'security.login.username'|trans }}</label>
            <input class="col-sm-8 log-field" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
        </div>

        <div class="col-sm-12 log-frame">
            <label class="col-sm-4 log-label" for="password">{{ 'security.login.password'|trans }}</label>
            <input class="col-sm-8 log-field" type="password" id="password" name="_password" required="required" />
        </div>
        
        <div class="col-sm-12 log-frame">
            <label class="col-sm-4 log-label" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            <input class="col-sm-1 log-field" type="checkbox" id="remember_me" name="_remember_me" value="on" />
        </div>

        <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        <a class="btn btn-primary" href="{{ path('homepage') }}">Annuler</a>
    </form>

    <hr>
        
        <a class="log-lost" href="{{ loginUrl }}"><span class="glyphicon glyphicon-globe"></span><i class="fa fa-facebook-official" aria-hidden="true"></i> Se loguer avec facebook</a>
        <a class="log-lost" href="{{ path('fos_user_resetting_request') }}"><span class="glyphicon glyphicon-globe"></span> Mot de passe perdu ?</a>
        <br/>
        <br/>
        <a class="log-lost" href="{{ path('fos_user_registration_register') }}"><span class="glyphicon glyphicon-user"></span> Pas encore inscrit ?</a>
    </div>
    
</div>

