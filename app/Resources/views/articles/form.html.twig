{% form_theme form "form/fields.html.twig" %}


<div class="well">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

  {# general errors of the form #}
  {{ form_errors(form) }}

  {# the same thing for an another field  #}
  <div class="form-group">
    {# label generating #}
    {{ form_label(form.title, "Titre de l'oeuvre", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

    {# Displaying of errors of this field #}
    {{ form_errors(form.title) }}

    <div class="col-sm-10">
      {# input generating #}
      {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>

  {# the same thing for an another field  #}
  <div class="form-group">
    {# label generating #}
    {{ form_label(form.subtitle, "Chapô d'introduction de l'oeuvre", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

    {# Displaying of errors of this field #}
    {{ form_errors(form.subtitle) }}

    <div class="col-sm-10">
      {# input generating #}
      {{ form_widget(form.subtitle, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>


  {# the same thing for an another field  #}
  <div class="form-group">
    {{ form_label(form.description, "Saisissez votre article", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.description) }}
    <div class="col-sm-10">
      {{ form_widget(form.description|raw, {'attr': {'class': 'form-control'} }) }}
    </div>
  </div>


  {# we just display the widget for the button #}
  {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

  <a href="{{ path('homepage') }}" class="btn btn-primary btn-md page-scroll">Annuler</a>

  {# auto generating of the fields wich are not read again.
     In this example, the field CSRF will be generate automatically
     and all hidden fields (type « hidden »). #}
  {{ form_rest(form) }}

  {# close the mark <form> of  HTML formulaire #}
  {{ form_end(form) }}
</div>
