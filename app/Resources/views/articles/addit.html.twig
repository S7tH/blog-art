{% block body %}
<div class="row">
    <div id="tm-section-1" class="tm-section">
        <div class="col-md-12">
            <h1 class="text-xs-center blue-text tm-page-2-title">Lumino Bootstrap 4.0 Columns</h1>
            <p class="text-xs-center tm-page-2-p tm-page-2-subtitle">
                Etiam at rhoncus nisl. Nunc rutrum ac ante euismod cursus. <br>
                Suspendisse imperdiet feugiat massa nec iaculis.
            </p>
            <img src="{{ asset('bundles/app/img/tm-1800x600-01.jpg') }}" class="img-fluid tm-banner-img" alt="Image">            
        </div>
    </div>                
</div>


<div class="row">
    <section id="tm-main-section" class="tm-section">
            <div class="tm-container">
                <div class="col-xs-12 article-big-title"><h3>{% block formtitle %}{% endblock %}</h3></div>
                <button class="btn btn-primary"><a target="_blank" href="{{ path('addimgbrowser') }}"><i class="fa fa-reply-all" aria-hidden="true"></i>Uploader des images</a></button>
                <button data-toggle="modal" data-backdrop="false" href="#imgbrowser"  class="btn btn-primary">
                    Banque d'images
                </button>
                <div class="modal" id="imgbrowser">
                    <div class="modal-dialog">  
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">x</button>
                                <h4 class="modal-title">Vos images :</h4>
                            </div>
                            <div class="modal-body">
                                {{ render(controller('AppBundle:ImageBrowser:displaybrowser')) }}
                            </div>
                        </div>  
                    </div> 
                </div>
                
                
                {% include('articles/form.html.twig') %}
            
                <a href="{{ path('homepage') }}" class="btn btn-primary">Retour à la liste des tâches</a>
            </div>
    </section>
</div>
{% endblock %}

{% block javascripts %}
    
    <script src="https://cdn.ckeditor.com/4.8.0/full-all/ckeditor.js"></script>

    <script>
        CKEDITOR.replace('article[description]',{
            skin: 'moono-dark,{{ asset('bundles/app/ckeditor/skins/moono-dark/')}}',
            customConfig: '{{ asset('bundles/app/ckeditor/config.js')}}',
            extraPlugins: 'youtube,video,videoembed'
        });
    </script>

    <script>
        CKEDITOR.plugins.addExternal( 'youtube', '{{ asset('bundles/app/ckeditor/plugins/youtube/')}}', 'plugin.js' );
        CKEDITOR.plugins.addExternal( 'video', '{{ asset('bundles/app/ckeditor/plugins/video/')}}', 'plugin.js' );
        CKEDITOR.plugins.addExternal( 'videoembed', '{{ asset('bundles/app/ckeditor/plugins/videoembed/')}}', 'plugin.js' );
    </script>

    <script>
    //initAjaxForm();
        function initAjaxForm()
        {
            $('body').on('submit', '.addimage', function(e)
            {
                e.preventDefault();
 
                $.ajax(
                {
                    type: $(this).attr('method'),
                    url: $(this).attr('action'),
                    data: $(this).serialize(),
                    enctype: 'multipart/form-data'
                })
                .done(function (data)
                {
                    if (typeof data.message !== 'undefined')
                    {
                        alert(data.message);
                    }
                })
                .fail(function (jqXHR, textStatus, errorThrown)
                {
                    if (typeof jqXHR.responseJSON !== 'undefined')
                    {
                        if (jqXHR.responseJSON.hasOwnProperty('form'))
                        {
                            $('#form_body').html(jqXHR.responseJSON.form);
                        }
                        $('.form_error').html(jqXHR.responseJSON.message);
                    } 
                    else 
                    {
                        alert(errorThrown);
                    }
                });
            });
        }
