{% form_theme form "form/fields.html.twig" %}

<div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 col-xl-8">
  {{ form_start(form, {'attr': {'class': 'tm-contact-form', 'id': 'contactform', 'action': path('contact') }}) }}

  {# general errors of the form #}
  {{ form_errors(form) }}

  <div class="form-group">
    {# Displaying of errors of this field #}
    {{ form_errors(form.fromEmail) }}

    <div class="col-sm-10">
      {# input generating #}
      {{ form_widget(form.fromEmail, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>

  <div class="form-group">
    {# Displaying of errors of this field #}
    {{ form_errors(form.subject) }}

    <div class="col-sm-10">
      {# input generating #}
      {{ form_widget(form.subject, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>

  <div class="form-group">
    {# Displaying of errors of this field #}
    {{ form_errors(form.body) }}

    <div class="col-sm-10">
      {# input generating #}
      {{ form_widget(form.body, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>

  {# we just display the widget for the button #}
  {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

  {# auto generating of the fields wich are not read again.
     In this example, the field CSRF will be generate automatically
     and all hidden fields (type « hidden »). #}
  {{ form_rest(form) }}

  {# close the mark <form> of  HTML formulaire #}
  {{ form_end(form) }}
</div>

