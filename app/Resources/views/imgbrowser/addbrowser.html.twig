{% extends 'base.html.twig' %}
{% block links %}
    <li class="nav-item">
        <a class="nav-link" href="#tm-main-section"><i class="fa fa-caret-square-o-right" aria-hidden="true"></i> Gallerie</a>
    </li>
{% endblock %}

{% block externalinks %}
    <li class="nav-item">
        <a class="nav-link external" href="{{ path('contact') }}"><i class="fa fa-pencil" aria-hidden="true"></i> Contact</a>
    </li>
    <li class="nav-item">
        <a class="nav-link external" href="{{ path('homepage') }}"><i class="fa fa-reply-all" aria-hidden="true"></i> Blog</a>
    </li>
{% endblock %}

{% block admin %}
    <li class="nav-item">
        <a class="nav-link external" href="{{ path('article_new') }}"><i class="fa fa-sticky-note-o" aria-hidden="true"></i> Cr√©er un article</a>
    </li>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="tm-intro">
            <section>                        
                <div class="tm-container text-xs-center tm-section-1-inner">
                    <button data-toggle="modal" data-backdrop="false" href="#imgup"  class="btn btn-primary">
                        Uploader une image
                    </button>
                    <div class="modal" id="imgup">
                        <div class="modal-dialog">  
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">x</button>
                                    <h4 class="modal-title">Choisissez une image depuis votre pc :</h4>
                                </div>
                                <div class="modal-body">
                                    {% include('imgbrowser/form.html.twig') %}
                                </div>
                            </div>  
                        </div> 
                    </div>
                </div>                                               
            </section>
        </div>  
    </div> 
    <div class="row">
        <section id="tm-main-section" class="tm-section">
            <div class="tm-container text-xs-center"> 
                {% for img in images %} 
                    <div class="tm-gallery-img-container">
                        
                            <a href="#">
                                <img src="{{ asset(img.webPath) }}" alt="{{ img.alt }}" class="img-fluid tm-gallery-img"> <!-- 300x200 -->
                            </a>
                      
                        <div class="tm-gallery-desc">
                            <a href="{{ path('homepage') }}"><span>{{ img.alt }}</span></a>
                        </div>   
                    </div>
                {% endfor %}
                </div>
            </div>
        </section>
    </div> <!-- row -->
{% endblock %}



