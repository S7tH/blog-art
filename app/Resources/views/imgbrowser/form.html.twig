{% form_theme form "form/fields.html.twig" %}


<div class="well">
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {# general errors of the form #}
    {{ form_errors(form) }}

    <div class="form-group">
        <p class="msg-form">Importer une image de mon pc (qui )doit être de taille absolue 640x480 et un poid de 1MB maximum)</p>
        {# label generating #}
        {{ form_label(form.file, "Image", {'label_attr': {'class': 'adit-file col-sm-2 control-label'}}) }}

        {# Displaying of errors of this field #}
        {{ form_errors(form.file) }}

        <div class="col-sm-10">
            {# input generating #}
            {{ form_widget(form.file) }}
        </div>
    </div>

  {# we just display the widget for the button #}
  {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

  {# auto generating of the fields wich are not read again.
     In this example, the field CSRF will be generate automatically
     and all hidden fields (type « hidden »). #}
  {{ form_rest(form) }}

  {# close the mark <form> of  HTML formulaire #}
  {{ form_end(form) }}
</div>
