{% extends 'base.html.twig' %}

{% block links %}
    <li class="nav-item">
        <a class="nav-link" id="blogstate" href="#tm-main-section"><i class="fa fa-newspaper-o" aria-hidden="true"></i> Blog</a>
    </li>

    <li class="nav-item">
        <a class="nav-link" id="gallerystate" href="#gallery"><i class="fa fa-paint-brush" aria-hidden="true"></i>Gallery</a>
    </li>

    <li class="nav-item"> 
        <a class="nav-link" href="#bottom"><i class="fa fa-paw"></i> Pied de page</a>
    </li>

    <li class="nav-item">
        <button data-toggle="modal" data-backdrop="false" href="#contact" class="loginout"><i class="fa fa-pencil" aria-hidden="true"></i> Contact</button>
    </li>
{% endblock %}



{% block admin %}
    <li class="nav-item">
        <a class="nav-link external" href="{{ path('article_new') }}"><i class="fa fa-sticky-note-o" aria-hidden="true"></i> Créer un article</a>
    </li>
{% endblock %}


{% block introtext %}
    <p class="tm-intro-text">Welcome to my gallery</p>
    {# we display flash message wich name is « notice » #}
    {% for message in app.session.flashbag.get('notice') %}
        <p> {{ message }}</p>
    {% endfor %}
    {% block btnintro %}
        <a href="#tm-main-section" class="tm-intro-link"><i class="fa fa-caret-down"></i></a>
    {% endblock %} 
{% endblock %}    

{% block body %}
    <div id="tm-main-section">
        {{ include("navigation/blog.html.twig") }}
        {{ include("navigation/gallery.html.twig") }}
    </div>
{% endblock %}

{% block contact %}
    {{ include("navigation/contactmodal.html.twig") }}
{% endblock %}

{% block loginout %}
    {{ include("security/connexion.html.twig") }}
    {{ include("security/register.html.twig") }}
{% endblock %}
  
{% block javascripts %}
    <script src="{{ asset('bundles/app/js/dynamicblog.js') }}"></script>
    <script>if({{page}} != null){$('.tm-intro').toggle();}</script>
{% endblock %}